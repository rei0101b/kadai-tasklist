<h3> ID = <%= @task.id %>の詳細ページ</h3>
<table class="table table-bordered">
    <tr>
        <th>id</th>
        <td><%= @task.id %></td>
    </tr>
    <tr>
        <th>内容</th>
        <td><%= @task.content %></td>
    </tr>
    <tr>
        <th>ステータス</th>
        <td><%= @task.status %></td>
    </tr>
    <tr>
        <th>担当</th>
        <td><%= @task.person %></td>
    </tr>
</table>

<%= link_to "このタスクを編集する", edit_task_path(@task), class: "btn btn-default" %>
<%= link_to "このタスクを削除する", @task, method: :delete, data: { confirm: "本当に削除してよろしいですか?" }, class: "btn btn-danger" %>

